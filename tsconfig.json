{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "es2015"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": false,
        "strictNullChecks": true,
        "pretty": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "outDir": "lib"
    },
    "exclude": [
        "node_modules/*"
    ]
}